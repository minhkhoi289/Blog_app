<% if current_user.like? @post %>
  <%= form_for current_user.likes.find_by(micropost_id: @post.id), remote: true, method: :delete do |f| %>
    <%= hidden_field_tag :micropost_id, @post.id %>
    <%= image_submit_tag "like.png" %>
  <% end %>
<% else %>
  <%= form_for current_user.likes.build, remote: true do |f|  %>
   <%= hidden_field_tag :micropost_id, @post.id %>
    <%= image_submit_tag "unlike.png" %>
  <% end %>
<% end %>
